function magnitude = mag(varargin)
%mag returns the length of a vector
%   
if length(varargin{1})==3   %if the first argument 
    len1 = varargin{1}(1);
    len2 = varargin{1}(2);
    len3 = varargin{1}(3);
else
    len1 = varargin{1};
    len2 = varargin{2};
end

magnitude = sqrt(len1^2 + len2^2 + len3);
end